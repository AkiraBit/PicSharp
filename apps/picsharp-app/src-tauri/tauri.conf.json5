{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "PicSharp",
  "version": "../package.json",
  "identifier": "com.PicSharp.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "resizable": true,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "title": "PicSharp",
        "width": 840,
        "height": 560,
        "center": true
      }
    ],
    "security": {
      "dangerousDisableAssetCspModification": true,
      // "csp": {
      //   "default-src": "'self' customprotocol: asset:",
      //   "connect-src": "ipc: http://ipc.localhost http://localhost",
      //   "font-src": [
      //     "https://fonts.gstatic.com"
      //   ],
      //   "img-src": "'self' asset: http://asset.localhost blob: data:",
      //   "style-src": "'unsafe-inline' 'self' https://fonts.googleapis.com"
      // },
      "assetProtocol": {
        "enable": true,
        "scope": [
          "**"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "category": "Productivity",
    "copyright": "Copyright (c) AkiraBit 2025. All rights reserved.",
    "homepage": "https://github.com/AkiraBit/PicSharp",
    "license": "AGPL-3.0",
    "licenseFile": "../../LICENSE",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "resources/**/*"
    ],
    "externalBin": [
      "binaries/picsharp-sidecar"
    ],
    "windows": {
      "webviewInstallMode": {
        "type": "embedBootstrapper"
      }
    },
    "macOS": {
      "entitlements": "./Entitlements.plist",
      "minimumSystemVersion": "12.0"
    },
    "linux": {
      "deb": {
        "section": "text"
      }
    },
    "fileAssociations": [
      {
        "name": "image",
        "ext": [
          "png",
          "jpg",
          "jpeg",
          "webp",
          "avif",
          "gif",
          "svg",
          "tiff"
        ],
        "description": "Image file",
        "mimeType": "image/*",
        "role": "Editor"
      }
    ],
    createUpdaterArtifacts: true
  },
  "plugins": {
    "cli": {
      "description": "PicSharp CLI",
      "args": [
        {
          "name": "file",
          "index": 1,
          "takesValue": true
        }
      ]
    },
    "deep-link": {
      "desktop": {
        "schemes": ["picsharp"]
      }
    },
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDU0Nzg5NjY2MDRFOTlCNjQKUldSa20ra0VacFo0VkswUU1WaE45WFFzN3YvYXFZMkQ4c0xVdHZJaVhMNFZmNHd1MHIrUjNQMHgK",
      "endpoints": ["https://github.com/AkiraBit/PicSharp/releases/latest/download/latest.json"]
    }
  }
}