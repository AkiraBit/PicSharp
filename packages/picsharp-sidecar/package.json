{
  "name": "@picsharp/picsharp-sidecar",
  "version": "1.0.0",
  "description": "PicSharp Sidecar",
  "author": "AkiraBit",
  "license": "AGPL-3.0",
  "repository": "AkiraBit/PicSharp",
  "homepage": "https://github.com/AkiraBit/PicSharp",
  "bugs": {
    "url": "https://github.com/AkiraBit/PicSharp/issues"
  },
  "private": true,
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "build-sea:macos-arm64": "tsc && pkg --targets node20-macos-arm64 --options abort-on-far-code-range --compress gzip --output ./bin/picsharp-sidecar-aarch64-apple-darwin .",
    "build-sea:macos-x64": "tsc && pkg --targets node20-macos-x64 --options abort-on-far-code-range --compress gzip --output ./bin/picsharp-sidecar-x86_64-apple-darwin .",
    "build-sea:win-x64": "tsc && pkg --targets node20-win-x64 --options abort-on-far-code-range --compress gzip --output ./bin/picsharp-sidecar-x86_64-pc-windows-msvc .",
    "build-sea:win-arm64": "tsc && pkg --targets node20-win-arm64 --options abort-on-far-code-range --compress gzip --output ./bin/picsharp-sidecar-aarch64-pc-windows-msvc .",
    "build-sea:linux-x64": "tsc && pkg --targets node20-linux-x64 --options abort-on-far-code-range --compress gzip --output ./bin/picsharp-sidecar-x86_64-unknown-linux-gnu .",
    "build-sea:linux-arm64": "tsc && pkg --targets node20-linux-arm64 --options abort-on-far-code-range --compress gzip --output ./bin/picsharp-sidecar-aarch64-unknown-linux-gnu ."
  },
  "dependencies": {
    "@hono/node-server": "^1.14.1",
    "@hono/zod-validator": "^0.4.3",
    "fs-extra": "^11.3.0",
    "hono": "^4.7.7",
    "nanoid": "^3.3.11",
    "sharp": "0.34.1",
    "svgo": "^3.3.2",
    "undici": "^7.8.0",
    "yargs": "^17.7.2",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/yargs": "^17.0.33",
    "@yao-pkg/pkg": "^6.4.0",
    "tsx": "^4.7.1",
    "typescript": "^5"
  },
  "bin": "dist/index.js",
  "pkg": {
    "assets": [
      "node_modules/@img/**/*"
    ]
  },
  "engines": {
    "node": ">=20"
  }
}
